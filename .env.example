# ============================================================================
# EMITHRAN Platform - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# ENVIRONMENT
# ----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# ----------------------------------------------------------------------------
POSTGRES_DB=emithran
POSTGRES_USER=emithran_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# CACHE (Redis)
# ----------------------------------------------------------------------------
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# MESSAGE QUEUE (RabbitMQ)
# ----------------------------------------------------------------------------
RABBITMQ_USER=emithran
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ----------------------------------------------------------------------------
# OBJECT STORAGE (MinIO)
# ----------------------------------------------------------------------------
MINIO_ROOT_USER=emithran
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# ----------------------------------------------------------------------------
# AUTHENTICATION (Supabase)
# ----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_min_32_characters_long
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# ----------------------------------------------------------------------------
# APPLICATION PORTS
# ----------------------------------------------------------------------------
FRONTEND_PORT=3000
BACKEND_PORT=4000
CAD_ENGINE_PORT=5000

# ----------------------------------------------------------------------------
# API URLS
# ----------------------------------------------------------------------------
# For client-side (browser) requests
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:4000

# For CORS configuration
CORS_ORIGIN=http://localhost:3000
CAD_CORS_ORIGINS=http://localhost:3000,http://localhost:4000

# ----------------------------------------------------------------------------
# CAD ENGINE CONFIGURATION
# ----------------------------------------------------------------------------
# File upload limits (in MB)
CAD_MAX_FILE_SIZE_MB=50

# Rate limiting (requests per minute per IP)
CAD_RATE_LIMIT=10

# Mesh quality settings (lower = higher quality, larger files)
CAD_LINEAR_DEFLECTION=0.1
CAD_ANGULAR_DEFLECTION=0.5

# ----------------------------------------------------------------------------
# SECURITY & RATE LIMITING
# ----------------------------------------------------------------------------
# Throttle settings (milliseconds)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ----------------------------------------------------------------------------
# PRODUCTION OVERRIDES (Optional)
# ----------------------------------------------------------------------------
# Uncomment and set for production deployments

# Production URLs
# NEXT_PUBLIC_API_GATEWAY_URL=https://api.yourdomain.com
# CORS_ORIGIN=https://yourdomain.com
# MINIO_BROWSER_REDIRECT_URL=https://minio.yourdomain.com

# Production security
# NODE_ENV=production
# LOG_LEVEL=warn

# ============================================================================
# NOTES
# ============================================================================
# 1. Generate secure passwords using: openssl rand -base64 32
# 2. JWT_SECRET must be at least 32 characters
# 3. Never use default passwords in production
# 4. Keep this file updated when adding new environment variables
# 5. Document any new variables with comments
# ============================================================================
