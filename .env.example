# ===================

# ===================
# Docker Services
# ===================
# SECURITY WARNING: Change all default credentials before deploying to production!
# Generate strong passwords using: openssl rand -base64 32

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD
POSTGRES_MULTIPLE_DATABASES=auth_db,projects_db,vendors_db,materials_db,bom_db,cost_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD

# RabbitMQ
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD

# MinIO
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD

# ===================
# JWT Configuration
# ===================
# CRITICAL: Generate a secure random string for production!
# Use: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_MINIMUM_32_CHARACTERS_REQUIRED
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# ===================
# CORS
# ===================
