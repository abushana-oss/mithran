# Database Configuration - Primary Region
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Database Connection - Primary
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=6543
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_password
SUPABASE_DB_NAME=postgres

# Database Connection - Read Replicas (comma-separated)
SUPABASE_REPLICA_HOSTS=replica1.supabase.co,replica2.supabase.co
SUPABASE_REPLICA_PORTS=6543,6543
SUPABASE_REPLICA_REGIONS=us-west-2,eu-central-1

# Infrastructure
PRIMARY_REGION=us-east-1
BACKUP_REGION=us-west-2

# Application Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (optional, for custom auth)
JWT_SECRET=your_jwt_secret

# SMTP Email Configuration for RFQ System
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASS=your_app_password

# Company Information for RFQ Emails
COMPANY_NAME="Mithran Engineering"
COMPANY_PHONE="+91-XXXXXXXXXX"
BUYER_EMAIL=procurement@company.com
FRONTEND_URL=https://your-domain.com

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50485760

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs